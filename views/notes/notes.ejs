<%- include('layout') %>

<section class="note">
    <h1><%= note.title %></h1>
    <p><%= note.content %></p>
    <a href="/notes/<%= note.id %>/edit">Edit</a>
    <form action="/notes/<%= note.id %>?_method=Delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this note?');"></form>
        <button type="submit">Delete</button>
    </form>
</section>
