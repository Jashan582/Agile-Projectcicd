<%- include('layout') %>

<section class="edit-note">
    <h1>Edit Note</h1>
    <form action="/notes/<%= note.id %>_method=PUT" method="POST">
        <input type="text" name="title" value="<%= note.title %>">
        <textarea name="content"><%= note.content %></textarea>
        <button type="submit">Save Changes</button>
    </form>
</section>
