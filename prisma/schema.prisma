generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  name     String
  password String
  role     String
}

model reminder {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  completed   Boolean
  dateCreated DateTime  @db.Date
  dateDue     DateTime? @db.Date
  description String
  title       String
  userId      String    @db.ObjectId
}
